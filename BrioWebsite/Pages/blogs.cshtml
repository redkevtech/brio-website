@page
@model BrioWebsite.Pages.BlogsModel
@{
    ViewData["Title"] = "Blogs";
}

<!-- Custom Styles -->
<style>
    .body-container {
        background-color: #fff6ec;
        padding-top: 100px;
        font-family: 'Roca One', sans-serif;
        display:grid;
    }
    .blog-list {
        list-style: none;
        text-align: left;
    }


    .blog-item {
        margin-bottom: 40px;
        margin-left: 5vw;
        padding-bottom: 20px;
        padding-right: 10vw;
        border-bottom: 1px solid #ccc;
        text-align: left;

        color: #301607;
        width: 100vw;
    }

    .blog-item .tags {
        margin-top: 10px;
    }

    .blog-item .tags span {
        color: #301607;
        font-family: montserrat;
        background-color: #f1aa49;
        padding: 4px 11px 6px 11px;
        border-radius: 5px;
        margin: 5px 10px 5px 0px;
        display: inline-block;
        white-space: nowrap; /* Prevents tags from breaking */
    }

    .blog-item .smaller-text {
        font-family: montserrat;
    }

    .blog-title {
        margin-bottom: 10px;
        color: #301607;
        text-decoration: none;
        font-family: 'Roca One', sans-serif;
    }

    .blog-title:hover {
        color: #733511;
        font-family: 'Roca One', sans-serif;
    }
</style>

<div class="body-container">

    <ul class="blog-list">
        @foreach (var blog in Model.BlogPosts)
        {
            <li class="blog-item">
                <a href="/blog/@blog.Navigation" class="blog-title small-text">@blog.Title</a>
                <div class="smaller-text">By @blog.Author</div>
                <div class="smaller-text">@blog.Summary</div>

                <div class="smaller-text tags">
                    @foreach (var tag in blog.Tags)
                    {
                        <span>@tag</span>
                    }
                </div>

            </li>
        }
    </ul>
</div>
