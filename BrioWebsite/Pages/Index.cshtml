@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    
    .body-div{
        background-image: url('Images/Home/home_page_background.png'); /* Replace 'path_to_your_image.jpg' with the actual path to your image */
        background-size: cover; /* Cover the entire container */
        background-position: center; /* Center the background image */
    }
    .body-container {
        display: flex;
        flex-direction: row; /* Change to row to place sections side by side */
        justify-content: center;
        align-items: center;
        text-align: center;
        min-height: calc(100vh - 75px); /* Subtract header height from viewport height */
        width: 100%; /* Adjust as needed */
        position: relative; /* Enable absolute positioning for the footer */
        padding-left: 150px;
        padding-right: 150px;

    }


    /* Style for the sections */
    .section,
    .columnA,
    .columnB {
        flex: 1; /* Each section takes up equal space */
        padding-top: 0px;
        padding-bottom: 0px;
    }

    /* Style for the logo */
    .logo {
        width: 100px;
        margin: 0px;
    }

    /* Style for the large text */
    .large-text {
        font-size: 120px;
        color:white;
        font-family: 'Roca One';
        line-height: 1;
    }

    /* Style for the horizontal line */
    .horizontal-line {
        border-top: 5px solid #ffffff;
        width: 350px;
        margin: 0px;

        opacity: 1;
    }

    /* Style for the smaller text */
    .small-text {
        font-size: 50px;
        color: white;
        font-family: 'Roca One';
        line-height: 1;
    }

    /* Style for the text box */
    .text-box {
        width: 80%;
        margin: 0;
        border-radius: 10px;
        font-size: 28px;
        color: white;
        font-family: Montserrat;
    }

    /* Style for the button */
    .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f3ddcb;
        color: #19603b;
        font-weight:bold;
        border: none;
        border-radius: 50px;
        font-size: 18px;
        cursor: pointer;
    }
.grid-container {
          display: grid;
          gap: 0px;
          grid-template-columns: auto auto;
        justify-content: center;
}
.grid-item {
    display: flex;
    align-items: center;
    justify-content:center;
width: 35vw;


    
}
</style>
<div class="body-container">
<div class="section">
<div class="grid-container">
  <div class="grid-item">
        <img src="Images/Brio-Flower.png" alt="Brio Wellness Center Logo" class="logo"></div>
  <div class="grid-item">2</div>
  <div class="grid-item">
        <p class="row2 large-text">Brio<br /> Wellness<br />Center</p></div>
  <div class="grid-item">
        <p class="text-box">Your health &ndash; spiritual, emotional, physical, and mental &ndash; is directly proportional to your happiness. Our doctors provide you with the tools you need to radically transform your health, freeing you to live the abundant life you deserve!</p></div>
  <div class="grid-item">
        <hr class="horizontal-line"></div>
  <div class="grid-item">
        <button class="button">OUR SERVICES &rarr;</button></div>
  <div class="grid-item">
        <div class="small-text">Chiropractic<br />& Nutrition</div></div>
  <div class="grid-item">
</div>
</div></div>

</div>
